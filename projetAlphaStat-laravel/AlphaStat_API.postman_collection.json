{
  "info": {
    "name": "AlphaStat API avec Upload",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@alphastat.com\",\n  \"password\": \"password123\"\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": { "raw": "http://127.0.0.1:8000/api/auth/login", "protocol": "http", "host": ["127.0.0.1"], "port": "8000", "path": ["api","auth","login"] }
      }
    },
    {
      "name": "Demandes - Créer avec fichier PDF",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "service_id", "value": "1", "type": "text" },
            { "key": "description_projet", "value": "Projet test avec PDF", "type": "text" },
            { "key": "fichier_joint", "type": "file", "src": "C:/chemin/vers/fichier.pdf" }
          ]
        },
        "url": { "raw": "http://127.0.0.1:8000/api/demandes", "protocol": "http", "host": ["127.0.0.1"], "port": "8000", "path": ["api","demandes"] }
      }
    },
    {
      "name": "Demandes - Créer avec fichier DOCX",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "service_id", "value": "1", "type": "text" },
            { "key": "description_projet", "value": "Projet test avec DOCX", "type": "text" },
            { "key": "fichier_joint", "type": "file", "src": "C:/chemin/vers/fichier.docx" }
          ]
        },
        "url": { "raw": "http://127.0.0.1:8000/api/demandes", "protocol": "http", "host": ["127.0.0.1"], "port": "8000", "path": ["api","demandes"] }
      }
    },
    {
      "name": "Demandes - Créer sans fichier",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "service_id", "value": "1", "type": "text" },
            { "key": "description_projet", "value": "Projet test sans fichier", "type": "text" }
          ]
        },
        "url": { "raw": "http://127.0.0.1:8000/api/demandes", "protocol": "http", "host": ["127.0.0.1"], "port": "8000", "path": ["api","demandes"] }
      }
    },
    {
      "name": "Admin - Changer Statut Demande",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token_admin}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"statut\": \"en_cours\"\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": { "raw": "http://127.0.0.1:8000/api/admin/demandes/6/status", "protocol": "http", "host": ["127.0.0.1"], "port": "8000", "path": ["api","admin","demandes","6","status"] }
      }
    }
  ]
